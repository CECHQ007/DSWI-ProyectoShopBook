
@{
    ViewBag.Title = "ERROR 404";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ShopBook</title>
    @Styles.Render("~/Assets/css/main.css")
    <style>
        @@media screen and (max-width:1680px) {
            .container .text {
                font-size: 4.5em;
            }
        }

        @@media screen and (max-width:980px) {
            .container .text {
                font-size: 3.25em;
            }
        }

        @@media screen and (max-width:736px) {
            .container .text {
                font-size: 2em;
                line-height: 1.4;
            }
        }


        .container {
        display: inline-block;
        position: relative;
        align-items:center;
        text-align:center;
        }
        .container .text {
            z-index: 1;
            position: absolute;
            text-align: center;
            font-family: "Roboto Slab", serif;
            margin: 0 auto;
            left: 0;
            right: 0;
            top: 30%;
            color: white;
            width: 70%;

        }

        .container .btn {
            position: absolute;
            top: 85%;
            left: 50%;
            transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            color: white;
            font-size: 16px;
            padding: 12px 24px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
        }
    </style>
</head>
<body class="is-preload">
    <!-- Wrapper - CONTENEDOR PRINCIPAL DE LA PAGINA -->
    <div id="wrapper">
        <!-- CUERPO DE LA PAGINA -->
        <div id="main">
            <div class="inner">
                <div class="container image fit">
                    <h1>ERROR 404</h1>
                    <img src="@Url.Content("~/Assets/images/error404.jpg")" alt="" />
                    <h3 class="text">Parece que no deberias estar por aqui...</h3>
                    <ul class="actions btn">
                        <li>@Html.ActionLink("Regresar al Inicio","Index","Home",new { id = "" },new { @class= "button primary"})</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/Assets/js/jquery.min.js")
    @Scripts.Render("~/Assets/js/browser.min.js")
    @Scripts.Render("~/Assets/js/breakpoints.min.js")
    @Scripts.Render("~/Assets/js/util.js")
    @Scripts.Render("~/Assets/js/main.js")
</body>
</html>
