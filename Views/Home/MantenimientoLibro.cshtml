                    // Mediante Ajax envia la data al Controlador Home
                    $(".swal2-confirm").click(function () {
                        $.ajax({
                            url: "/Home/EditarLibro?idLibro=" + idLibro + "&&tituLibro=" + tituLibro + "&&nomAutor=" + nomAutor
