
@{
    ViewBag.Title = "MantenimientoLibro";
}
@Styles.Render("~/Assets/css/modifiedstyles.css")
@model IEnumerable<ShopBook.Entity.tb_editoriales>
<header id="header">
    <a href="#" class="logo"><strong>Mantenimiento de Libros</strong></a>
</header>
<section>
    <ul class="actions">
        <li><a href="#" onclick="getAgregarModal()" class="button">Registrar</a></li>
    </ul>
    <div class="table-wrapper">
        <table id="tableId">
            <thead>
                <tr>
                    <th>Libro</th>
                    <th>Titulo</th>
                    <th>Autor</th>
                    <th>Precio</th>
                    <th>Fech. Publicación</th>
                    <th>Sinopsis</th>
                    <th>Editorial</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
        </table>
    </div>
</section>

