
@{
    ViewBag.Title = "MantenimientoEditorial";
}
    @Styles.Render("~/Assets/css/modifiedstyles.css")
    
    

    <header id="header">
        <a href="#" class="logo"><strong>Mantenimiento de Editoriales</strong></a>
    </header>

    <section>
        <ul class="actions">
            <li><a href="#" onclick="getAgregarModal()" class="button">Registrar</a></li>
        </ul>
        <div class="table-wrapper">
            <table id="tableId">
                <thead>
                    <tr>
                        <th>ID Editorial</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
         
                        <th>Fecha Registro</th>
                        <th>EDITAR</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
            </table>
        </div>
    </section>
    @section scripts{
        <script type="text/javascript">
        $(document).ready(function () {
            $("#tableId").DataTable({
                "ajax": {
                    "url": "/Home/listarEditorial?edit="+0,
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "idEdito", "autowidth": true },
                    { "data": "nomEdito", "autowidth": true },
                    { "data": "direccion", "autowidth": true },
                    { "data": "telefono", "autowidth": true },
                    
                    { "data": "fechaRegistro", "autowidth": true },

                    {
                        "data": "idEdito", "width": "50px", "render": function (data) {
                            return '<button onclick="promise(' + data +')">Editar</button>'
                        }
                    },
                    {
                        "data": "idEdito", "width": "50px", "render": function (data) {
                            return '<button onclick="getEliminarModal('+data+')">Eliminar</button>'
                        }
                    }
                ],
                "language": espaniol
            });
        });
        if ('@ViewBag.notification' != '') {
            Notification('@ViewBag.notification');
        }

        function getAgregarModal() {
            Swal.fire({
                title: 'Agregar',
                html: `
                            <div class="row gtr-uniform">
                                <div class="col-6 col-12-xsmall">
                                    <input type="text" id="iduser" placeholder="ID Usuario" />
                                </div>
                                <div class="col-6 col-12-xsmall">
                                    <input type="text" id="numventa" placeholder="Num. Ventas" />
                                </div>
                            </div>`,
                confirmButtonText: 'Registrar',
                showCancelButton: true,
                preConfirm: () => {
                    let idUser = parseInt($("#iduser").val(), 10);
                    let numVentas = parseInt($("#numventa").val(), 10);
                    if (Number.isInteger(idUser) == false || Number.isInteger(numVentas) == false) {
                        Swal.showValidationMessage(`Complete los campos con solo numeros.`)
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    let idUser = $("#iduser").val();
                    let numVentas = $("#numventa").val();
                    let message = "Se agrego correctamente";
                    Swal.fire(
                        'Agregado!',
                        'Usuario: ' + idUser + ' | Numero de Ventas: ' + numVentas,
                        'success'
                    )
                    // Es solo estilo, tiene incompatiblidad con main.css
                    element[0].setAttribute("style", "height:2.5em !important; line-height: 0em !important; color: white !important; background-color: #008000 !important")
                    $(".swal2-confirm").click(function () {
                        $.ajax({
                            url: "/Home/GuardarProveedor?idUser=" + idUser + "&&numVentas=" + numVentas,
                            success: function (r) {
                                window.location = "/Home/Mantenimiento?notification=" + message;
                            }
                        })
                    })
                }
            })
            let element = document.getElementsByClassName("swal2-styled")
            /* Alert Fix Styles */
            for (let i = 0; i < element.length; i++) {
                if (element[i].getAttribute("style") == "display: none;") {
                }
                else {
                    element[i].setAttribute("style",
                        "height:2.5em !important; line-height: 0em !important; color: white !important")
                }
            }
            element[0].setAttribute("style", "height:2.5em !important; line-height: 0em !important; color: white !important; background-color: #f56a6a !important")
        }

        function getEditarModal(idData) {
            let json = fetch("/Home/listarProveedor?edit="+1, {
                "headers": {
                    "accept": "*/*",
                    "content-type": "application/JSON",
                },
                "body": null,
                "method": "GET",
                "mode": "cors"
            }).then(resp => resp.json()).then(js => {
                response = js
                promiseEditar(response, idData)
            })
        }

        function promiseEditar(response, idData) {
            Swal.fire({
                title: 'Editar',
                html: `
                            <div class="row gtr-uniform">
                                <div class="col-6 col-12-xsmall">
                                    <input disabled="disabled" type="text" id="iduser" value=${response.data[idData-1].idData} placeholder="ID Usuario" />
                                </div>
                                <div class="col-6 col-12-xsmall">
                                    <input type="text" id="numventa" placeholder="Num. Ventas" value=${response.data[idData-1].numVentas} />
                                </div>
                            </div>`,
                confirmButtonText: 'Actualizar',
                showCancelButton: true,
                preConfirm: () => {
                    let numVentas = parseInt($("#numventa").val(), 10);
                    if (Number.isInteger(numVentas) == false) {
                        Swal.showValidationMessage(`Complete los campos con solo numeros.`)
                    }
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    let numVentas = $("#numventa").val();
                    let message = "Actualizado correctamente";
                    Swal.fire(
                        'Actualizado!',
                        'Numero de Ventas: ' + numVentas,
                        'success'
                    )
                    // Es solo estilo, tiene incompatiblidad con main.css
                    element[0].setAttribute("style", "height:2.5em !important; line-height: 0em !important; color: white !important; background-color: #008000 !important")

                    // Mediante Ajax envia la data al Controlador Home
                    $(".swal2-confirm").click(function () {
                        $.ajax({
                            url: "/Home/EditarProveedor?idData=" + idData + "&&numVentas=" + numVentas,
                            success: function (r) {
                                window.location = "/Home/Mantenimiento?notification=" + message;
                            }
                        })
                    })
                }
            })
            let element = document.getElementsByClassName("swal2-styled")
            /* Alert Fix Styles */
            for (let i = 0; i < element.length; i++) {
                if (element[i].getAttribute("style") == "display: none;") {
                }
                else {
