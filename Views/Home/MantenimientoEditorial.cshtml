                    const pregdirecc = /^[a-zA-Z0-9 ]+$/;

                    const pregNomEdito = /^[a-zA-ZÀ-ÿ\u00f1\u00d1]+$/i;

                    if (nomEdito == '' || direccion == '' || telefono == '') {
