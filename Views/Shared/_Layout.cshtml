<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ShopBook</title>
    @Styles.Render("~/Assets/css/main.css")
</head>
<body class="is-preload">
    <!-- Wrapper - CONTENEDOR PRINCIPAL DE LA PAGINA -->
    <div id="wrapper">
        <!-- CUERPO DE LA PAGINA -->
        <div id="main">
            <div class="inner">
                @RenderBody()
            </div>
        </div>


        <!-- BARRA DE NAVEGACION -->
        <div id="sidebar">
            <div class="inner">

                <!-- Search -->
                <section id="search" class="alt">
                    <form method="post" action="#">
                        <input type="text" name="query" id="query" placeholder="Search" />
                    </form>
                </section>

                <!-- Menu -->
                <nav id="menu">
                    <header class="major">
                        <h2>Acciones</h2>
                    </header>
                    <!-- ELEMENTOS DEL MENU -->
                    <ul>
                        <!-- ELEMENTOS GLOBALES -->
                        <li><a onclick="Alert('Test','info','success')" href="#">Alerta</a></li>
                        <li><a onclick="Notification('Esta es una prueba')" href="#">Notificación</a></li>
                        <li><a onclick="Delete()" href="#">Delete</a></li>

                        <!-- ELEMENTOS AL LOGEAR -->
                        <!-- AHORA SE MANEJA DESDE ID ROL -->
                        @{
                            if (System.Web.HttpContext.Current.Session["email"] != null)
                            {
                                /* ADMINISTRADOR */
                                if (int.Parse(System.Web.HttpContext.Current.Session["rol"].ToString()) == 1)
                                {
                                    <li>
                                        <span class="opener">Acciones de SuperUsuario</span>
                                        <ul>
                                            <li>@Html.ActionLink("Inicio", "Admin", "Home")</li>
                                            <li>@Html.ActionLink("Moderar", "About", "Home")</li>
                                            <li>@Html.ActionLink("Generar", "Contact", "Home")</li>
                                        </ul>
                                    </li>
                                }

                                /* PROVEEDOR */
                                if (int.Parse(System.Web.HttpContext.Current.Session["rol"].ToString()) == 2)
                                {
                                    <li>@Html.ActionLink("Inicio", "Proveedor", "Home")</li>
                                    <li>@Html.ActionLink("Agregar Libro", "Proveedor", "Home")</li>
                                    <li>@Html.ActionLink("Eliminar Libro", "Proveedor", "Home")</li>
                                }

                                /* USUARIO DEFAULT - INICIO AL LOGEAR */
                                if (int.Parse(System.Web.HttpContext.Current.Session["rol"].ToString()) == 4)
                                {
                                    <li>@Html.ActionLink("Inicio", "Inicio", "Home")</li>
                                    <li>@Html.ActionLink("Ver Favoritos", "Inicio", "Home")</li>
                                    <li>@Html.ActionLink("Mis Compras", "Inicio", "Home")</li>
                                }
                            }
                        }
                        <!--
    <li>
        <span class="opener">Submenu</span>
        <ul>
            <li><a href="#">Lorem Dolor</a></li>
            <li><a href="#">Ipsum Adipiscing</a></li>
            <li><a href="#">Tempus Magna</a></li>
            <li><a href="#">Feugiat Veroeros</a></li>
        </ul>
    </li>
    <li><a href="#">Etiam Dolore</a></li>
    <li><a href="#">Adipiscing</a></li>
    <li>
        <span class="opener">Another Submenu</span>


        <ul>
            <li><a href="#">Lorem Dolor</a></li>
            <li><a href="#">Ipsum Adipiscing</a></li>
            <li><a href="#">Tempus Magna</a></li>
            <li><a href="#">Feugiat Veroeros</a></li>
        </ul>
    </li>
    <li><a href="#">Maximus Erat</a></li>
    <li><a href="#">Sapien Mauris</a></li>
    <li><a href="#">Amet Lacinia</a></li>
        -->
                        <li>
                            <span class="opener">Cuenta</span>
                            <ul>
                                @{ if (System.Web.HttpContext.Current.Session["email"] != null)
                                    {
                                        <li>@Html.ActionLink("Cerrar Sesión", "Desconectar", "Acceso")</li>
                                    }
                                    else
                                    {
                                        <li>@Html.ActionLink("Iniciar Sesión", "Login", "Acceso")</li>
                                    }
                                }
                            </ul>
                        </li>
                    </ul>
                    <!-- FIN -->
                </nav>

                <!-- Section -->
                <section>
                    <header class="major">
                        <h2>Ante interdum</h2>
                    </header>
                    <div class="mini-posts">
                        <article>
                            <a href="#" class="image"><img src="images/pic07.jpg" alt="" /></a>
                            <p>Aenean ornare velit lacus, ac varius enim lorem ullamcorper dolore aliquam.</p>
                        </article>
                        <article>
                            <a href="#" class="image"><img src="images/pic08.jpg" alt="" /></a>
                            <p>Aenean ornare velit lacus, ac varius enim lorem ullamcorper dolore aliquam.</p>
                        </article>
                        <article>
                            <a href="#" class="image"><img src="images/pic09.jpg" alt="" /></a>
                            <p>Aenean ornare velit lacus, ac varius enim lorem ullamcorper dolore aliquam.</p>
                        </article>
                    </div>
                    <ul class="actions">
                        <li><a href="#" class="button">More</a></li>
                    </ul>
                </section>

                <!-- INFORMACION DE CONTACTO -->
                <section>
                    <header class="major">
                        <h2>Get in touch</h2>
                    </header>
                    <p>
                        Sed varius enim lorem ullamcorper dolore aliquam aenean ornare velit lacus, ac varius enim lorem
                        ullamcorper dolore. Proin sed aliquam facilisis ante interdum. Sed nulla amet lorem feugiat tempus aliquam.
                    </p>
                    <ul class="contact">
                        <li class="icon solid fa-envelope"><a href="#">information@untitled.tld</a></li>
                        <li class="icon solid fa-phone">(000) 000-0000</li>
                        <li class="icon solid fa-home">
                            1234 Somewhere Road #8254<br />
                            Nashville, TN 00000-0000
                        </li>
                    </ul>
                </section>

                <!-- COPYRIGHT -->
                <footer id="footer">
                    <p class="copyright">
                        &copy; Untitled. All rights reserved. Demo Images: <a href="https://unsplash.com">Unsplash</a>. Design: <a href="https://html5up.net">HTML5 UP</a>.
                    </p>
                </footer>

            </div>
        </div>
    </div>
    @Scripts.Render("~/Assets/js/jquery.min.js")
    @Scripts.Render("~/Assets/js/browser.min.js")
    @Scripts.Render("~/Assets/js/breakpoints.min.js")
    @Scripts.Render("~/Assets/js/util.js")
    @Scripts.Render("~/Assets/js/main.js")
    @Scripts.Render("~/Assets/js/sweetalert2.all.min.js")
    @Scripts.Render("~/Assets/js/alert.js")
    @RenderSection("scripts", required: false)
</body>
</html>
